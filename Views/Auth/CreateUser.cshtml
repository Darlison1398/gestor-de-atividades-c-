@model GestorAtividades.Models.Usuario

@{
    ViewBag.Title = "Criar conta";
}

<h2>Crie sua conta</h2>

<form method="post" asp-action="CreateUsuario">

    <div class="mb-3 mt-3">
        <label class="form-label" asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" type="text" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="Email" class="form-label">Email:</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="Senha" class="form-label">Senha:</label>
        <input asp-for="Senha" class="form-control" type="password" required />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Registrar</button>

    <p style="color:red">@ViewBag.Error</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}